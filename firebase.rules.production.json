{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "usernames": {
      "$username": {
        ".read": true,
        ".write": "auth != null && (!data.exists() || data.val() === auth.uid)"
      }
    },
    "yaps": {
      "$yapId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('uid').val() === auth.uid || !data.exists())"
      }
    },
    "userYaps": {
      ".read": "auth != null",
      "$uid": {
        "$yapId": {
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "likes": {
      "$yapId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "userLikes": {
      "$uid": {
        "$yapId": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "reyaps": {
      "$yapId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "userReyaps": {
      "$uid": {
        "$yapId": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "following": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "followers": {
      "$uid": {
        "$followerUid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $followerUid"
        }
      }
    },
    "notifications": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    },
    "hashtags": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "trending": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "userBookmarks": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
